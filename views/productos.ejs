<%- include("plantilla/cabecera")%>

<link href='https://fonts.googleapis.com/css?family=Rubik Mono One' rel='stylesheet'>
<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

<div class="container">
    <h3 align="center" class="title-rosa">ADMINISTRAR PRODUCTOS</h3><br>
    <div class="card">
        <div class="card-header" style="background-color: #f32c3a; color: #fff;">
            <h5>CRITERIOS DE BUSQUEDA</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="tipoL">Codigo:</h6>
                    <input type="number" class="form-control">
                </div>
                <div class="col-md-4">
                    <h6 class="tipoL">Producto:</h6>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-4">
                    <h6 class="tipoL">Precio:</h6>
                    <input type="number" class="form-control">
                </div>
            </div>
        </div>
    </div><br>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a href="/productoNuevo" class="btn btn-primary l"><img src="icons/agregar-producto.png">   Registrar Producto</a>
                <a href="/productoImprimir" class="btn btn-warning l"><img src="icons/btn-imprimir.png">    Imprimir</a>
            </div>
            <div class="col-md-6">
                <h6>Buscar:</h6>
                <input type="text" class="form-control">
            </div>
        </div>
    </div><br>
    <table class="table table-hover text-center">
        <thead style="background-color: #f32c3a; color: white;">
            <tr>
                <th>Codigo</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach((user)=>{%>
            <tr>
                <td><%= user.id_prod %></td>
                <td><%= user.producto %></td>
                <td><%= user.precio %></td>
                <td><%= user.stock %></td>
                <td>
                    <a href="/productoedit/<%= user.id_prod %>" class="btn"><img src="icons/edit.png" title="Editar producto"></a>
                    <a href="/productodelete/<%= user.id_prod %>" class="btn"><img src="icons/delete.png" title="Eliminar producto"></a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>



<%- include("plantilla/footer")%>